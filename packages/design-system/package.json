{
  "name": "@confeti/design-system",
  "version": "0.1.0",
  "private": true,
  "exports": {
    ".": "./src/components/index.ts",
    "./styles": "./src/styles/index.ts"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "svgr": "svgr --out-dir src/icons/src/svg src/icons/assets --typescript --icon && mv src/icons/src/svg/index.ts src/icons/src/index.ts",
    "optimize-svg": "pnpm exec svgo -f src/icons/assets -o src/icons/assets",
    "build": "npm run optimize-svg"
  },
  "devDependencies": {
    "@confeti/typescript": "workspace:*",
    "@svgr/cli": "^8.1.0",
    "@turbo/gen": "^1.12.4",
    "@types/node": "^20.11.24",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.1",
    "svgo": "^3.3.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.17.0",
    "@vanilla-extract/recipes": "^0.5.5",
    "@vanilla-extract/sprinkles": "^1.6.3",
    "clsx": "^2.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
